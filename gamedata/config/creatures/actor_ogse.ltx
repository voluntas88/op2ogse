max_sleep_hours   = 12 ; используется в диалоге сна
;скорость уменьшения сытости со временем, общая идея следующая:
; имеется несколько стадий: 
; 1. нормальное состояние
;       никакого эффекта на здоровье нет. Скорость снижения сытости должна быть
;       рассчитана так чтобы это состояние достигалось за 6 часов игрового
;       времени. 
; 2. полуголодное состояние
;       есть повышенная усталость в зависимости от степени голода. Эта фаза
;       должна быть разумно длительной, предположительно около 12 часов
;       игрового времени, начиная с перехода от нормального состояния. В конце
;       этой фазы скорость снижения силы должна уравновесить естественный
;       прирост настолько, чтобы без дополнительных артефактов или иных
;       источников прироста силы передвигаться было бы невозможно.
;       Этому состоянию будут соответствовать зелёная и салатная иконки
;       индикатора.
; 3. состояние голода
;       кроме усталости имеется падение здоровья в зависимости от степени 
;       голода. Длительность этой фазы - 24 часа до предельного оголодания.
;       В конце негативный эффект на здоровье должен быть достаточен, чтобы
;       убить за примерно 8 часов. Этому состоянию будут соответствовать
;       жёлтая, оранжевая и красная иконки индикатора
; Исходя из описанной схемы полный цикл падения сытости от максимально единицы
; до нуля будет 42 часа.
; скорость снижения сытости за секунду игрового времени:
;   satiety_v = 1.0 / ((6+12+24) * 3600) = 6.613757e-6
;   satiety_v = 1.0 / ( ( 6 + 6 + 6 ) * 3600 ) = 0.000015
;satiety_v            = -0.000010 ; даёт общее время полного голодания 42 игровых часа
satiety_v             = -0.000015 ; даёт общее время полного голодания 18 игровых часа
light_hunger_limit    = 0.6666 ;0.8571    ; начало полуголодного состояния, 6 часов от полной сытости
;critical_hunger_limit = 0.5714    ; начало голодания, 18 часов от полной сытости
critical_hunger_limit = 0.3334    ; начало голодания, 12 часов от полной сытости
; эффект на энергию вычисляем так:
; если satiety > light_hunger 
; то <скорость снижения энергии> = 0
; иначе скорость снижения энергии вычисляется так, чтобы при максимальном
; оголодании суммарное восстановление составляло
;   stand_power * satiety_power_factor
satiety_power_factor  = 0.05 ;0.1 ; множитель для скорости восстановления энергии при полном оголодании
; эффект на здоровье вычисляем так:
; если satiety > critical_hunger 
; то <скорость прироста здоровья> = <постоянное значение>
; ранее это значение задавалось параметром satiety_health_v в секции
; [actor_condition], здесь для этого создаём такой же параметр
; при полной сытости единица здоровья восстанавливается за 1667 секунд
; реального времени
satiety_health_v      = 0.0001
; при превышении критического значения скорость прироста начинает снижаться и
; при максимальном значении голода должен быть не прирост, а убыль,
; достаточная, чтобы убить за 8 игровых часов. Т.е. рассчитываем прирост по
; формуле
; <скорость прироста здоровья> = satiety_health_v
;   + ( satiety - critical_hunger ) * satiety_health_factor
; чтобы убить за 8 часов надо иметь убыль:
;   1.0 / ( 3600 * 8 ) = 3.47e-5, получаем
;   -3.47e-5 = 0.00001 + ( 0.0 - 0.5714 ) * satiety_health_factor, отсюда имеем
; satiety_health_factor = ( -3.47e-5 - 0.0001 ) / -0.5714 =
;   0.0001347 / 0.5714 = 2.3574e-4
;
; чтобы убить за 1 час надо иметь убыль:
;   1.0 / ( 3600 * 1 ) = 0.00028, получаем
;   0.00028 = 0 + ( 0.0 - 0.3334 ) * satiety_health_factor, отсюда имеем
; satiety_health_factor = ( 0.00028 - 0 ) / -0.3334 =
;   0.00028 / 0.3334 = 0.00084
satiety_health_factor = 0.00084 ; множитель для скорости снижения здоровья

