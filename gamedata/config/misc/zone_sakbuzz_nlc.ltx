ef_anomaly_type				= 1
ef_weapon_type				= 13

sound						= 
postprocess					= postprocess_flame
	
artefacts					= af_ameba_slime, 0.8, af_ameba_slug, 0.2, af_ameba_mica, 0.0
BirthProbability 			= 0.2


;----------- Anomaly settings -----------------------
