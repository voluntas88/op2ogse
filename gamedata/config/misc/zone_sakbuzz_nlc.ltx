[zone_sakbuzz_nlc]
GroupControlSection			= spawn_group_zone
$spawn 						= "zones\buzz"
$prefetch 					= 16
; === Johnson ===
class						= ZS_BUZZ
; === Johnson ===
script_binding = amk_anoms.bind

