;Скриптовые параметры
[options]
; активировать запрет торговли поврежденными вещами
use_tradability_restrictions = false
; разгруппировывать и выделять цветом предметы в слотах и на поясе (кроме гранат)
ungroup_belt_slot_items      = false
; при условии активности ungroup_belt_slot_items также блокировать продажу предметов на поясе и в слотах
lock_belt_slot_items         = false

;Вывод отладочных сообщений
debug_mode = true

;FOV
;Значение FOV по умолчанию в игре
fov_volume =65
;Значения FOV, больше или меньше которых FOV выставлять нельзя
max_fov_volume = 140
min_fov_volume = 5

;Включение/выключение рандомных тайников
option_random_treasure =1

;Частота выпадания тайников при выполненном condlist. Чем меньше, тем больше вероятность
treasure_dropout =85

;Вывод содержимого нычки
treasure_need_text =1

;Сон НПС
npc_sleep =1

;Динамические новости и "некрологи", сообщения о монстрах
random_news =1
random_news_delta =5
spawn_message_flag =2 ;сообщения о появившихся монстрах. 0 - выключены, 1 - сообшения только об очень опасных, 2 - сообщения об опасных и очень опасных, 3 - сообщения обо всех.
news_showtime =5000 ;стандартное время показа сообщения (от 5000 до 20000)

;Периодичность выброса в игровых часах. К этому значению также добавляется случайная поправка от минус четырех до плюс четырёх часов. Указывайте значение только в целых числах не меньше 5.
t_surge =36

;Периодичность респауна нововведенных монстров в игровых часах. К этому значению также добавляется случайная поправка от минус одного до плюс одного часа. Указывайте значение только в целых числах не меньше 2.
t_spawn =2

;Периодичность респауна обычных монстров и людей в игровых часах. Если указать 0, то респаун будет происходить сразу, как только на локации освободится место для объектов. Указывайте только целые неотрицательные числа.
t_common =3

;Множитель респауна. Показывает, во сколько раз МАКСИМУМ число нововведенных монстров в "гулаге" может превышать их номинальное количество.
;Пример 1: После выброса спавнится 5 зомби (номинальное число). Система обнаруживает что в данном "гулаге" уже есть 3. resp_index*5=10. 3+5=8. Значит будет позволено заспавнить всех 5 зомбей, т.к. в итоге общее количество не превышает двойное (resp_index = 2) номинальное.
;Пример 2: После выброса спавнится 5 зомби (номинальное число). Система обнаруживает что в данном "гулаге" уже есть 7. resp_index*5=10. 7+5=12. Значит будет позволено заспавнить только 3 зомбя, т.к. в итоге общее количество превысит двойное (resp_index = 2) номинальное на 2.
;Можно указывать только целые положительные числа.
resp_index =1

;Дополнительный спавн опасностей по окончанию Выброса. 1 - вкл., 0 - выкл.
additional_spawn =1

;Таймер выброса на ЧАЭС в минутах реального времени.
aes_timer =15

;1 - хоррор-тайм включен, 0 - хоррор-тайм выключен
horror_flag =1

;1 - пси-зоны привязаны к хоррор-тайм, 2 - пси-зоны привязаны к Выбросу, 0 - пси-зоны выключены
psyzones_flag =2

;Множитель спавна аномалий. Не рекомендуется больше 4.0
spawn_anom_prob =1.0

;Коэффициент вероятности попытки рождения артефакта аномалией в Выброс
spawn_blow_art_probe =1.5

; тайм-фактор для скриптов. должен соответствовать параметру "time_factor" в секции "alife"
s_time_factor =6

;худ костюма 1 - есть, 0 - нет
suithud_enable =0 

;эффект запотевания
blurs_enable =0 

;эффект забрызгивания экрана кровью
blood_enable =0 

;эффект плохого самочувствия
bleed_enable =1 

;отравление аптечками
poison_drugs =1

;медленное действие аптечки
slow_drugs =1

;автоинъектор антирада и аптечек
autoinjector =1

;спецэффекты при дожде
raining_fx =0
gloss_min =1.000000

;эффекты попадания по главгерою 0 - выключено, 1 - сотрясения камеры без засветки при хедшоте, 2 - с засветкой
oh_shit_im_hit =2

;номер по счёту того Выброса, который будет демонстрировать Время Ужаса. > 10 - демонстрация отключена, штатный режим, 0 - каждый Выброс. Демонстрация возможна на локациях: "Кордон", "Свалка", "Агропром", "Тёмная Долина".
