; -*- mode: conf-windows; coding: windows-1251-dos -*-

; Переопределить некоторые параметры гулагов.
[dsh.gulag.override.pri_smart_neutral_stalker1]
; Сталкеры в Припяти, у перехода с Радара
capacity = 4 ;8
cond = {+pri_stadium_scene_start =dsh_is_smart_empty(pri_smart_monolith_stalker1) =dsh_is_smart_empty(pri_smart_monolith_stalker2)}
dsh_walking = true

[dsh.gulag.override.pri_smart_neutral_stalker2]
; Сталкеры в Припяти, у перехода с Радара
capacity = 4 ;8
cond = {+pri_stadium_scene_start =dsh_is_smart_empty(pri_smart_monolith_stalker1) =dsh_is_smart_empty(pri_smart_monolith_stalker2)}
dsh_walking = true

[dsh.gulag.override.pri_smart_monolith_stalker1]
; монолитовцы сразу на входе
cond = {+pri_stadium_scene_start =dsh_is_smart_empty(pri_smart_neutral_stalker1) =dsh_is_smart_empty(pri_smart_neutral_stalker2)}

[dsh.gulag.override.pri_smart_monolith_stalker2]
; монолитовцы рядом с предыдущими, за домом
cond = {+pri_stadium_scene_start !dsh_is_smart_empty(pri_smart_monolith_stalker1)}

[dsh.gulag.override.pri_smart_monolith_stalker3]
; монолитовцы на остановке
cond = {+pri_stadium_scene_start =dsh_is_smart_empty(pri_smart_dolg_stalker1)}

[dsh.gulag.override.pri_smart_freedom_stalker1]
; свободовцы в гаражах
;capacity = 7
cond = {+pri_stadium_scene_start =dsh_is_smart_empty(pri_smart_monolith_stalker4)}
dsh_walking = true

[dsh.gulag.override.pri_smart_dolg_stalker1]
; долговцы рядом с детским садиком
;capacity = 7
cond = {+pri_stadium_scene_start =dsh_is_smart_empty(pri_smart_monolith_stalker3)}
dsh_walking = true

[dsh.gulag.override.pri_smart_monolith_stalker4]
; монолитовцы перед площадью, рядом с длинным домом
cond = {+pri_stadium_scene_start =dsh_is_smart_empty(pri_smart_freedom_stalker1)}

[dsh.gulag.override.pri_smart_monolith_stalker5]
; монолитовцы около автовокзала
cond = {+pri_stadium_scene_start}

[dsh.gulag.override.pri_smart_monolith_stalker6]
; монолитовцы у входа на стадион
cond = never ;{+pri_stadium_scene_start}

;[dsh.gulag.override.pri_stadium]
; гранатометчики на стадионе

[dsh.gulag.override.pri_monolith]
; база монолитовцев
cond = {-pri_stadium_scene_start}

[dsh.gulag.override.pri_wave1]
; в окнах и на крышах
cond = {-pri_stadium_scene_start}

[dsh.gulag.override.pri_wave2]
; в окнах и на крышах
cond = {-pri_stadium_scene_start}

[dsh.gulag.override.pri_wave4]
; на остановке под домом
cond = {-pri_stadium_scene_start}

[dsh.gulag.override.pri_wave5]
; рядом с детским садом на остановке
cond = {-pri_stadium_scene_start}

[dsh.gulag.override.pri_wave6]
; в детском садике
cond = {-pri_stadium_scene_start}

[dsh.gulag.override.pri_wave7]
; в подземном переходе
cond = {-pri_stadium_scene_start}

[dsh.gulag.override.pri_stadium_lair]
; снорки, тушканы и псевдогиганты на стадионе (10 штук)
dsh_walking = true

[dsh.gulag.override.pri_smart_tushkano_lair1]
; тушканы на стадионе
dsh_walking = true
dsh_walking_keep_min = 6 ;из 8

[dsh.gulag.override.pri_smart_tushkano_lair2]
; тушканы на стадионе
dsh_walking = true
dsh_walking_keep_min = 4 ;из 6

[dsh.gulag.override.pri_smart_pseudodog_lair1]
; псевдособаки у гастронома с Драгуновым
dsh_walking = true
dsh_walking_keep_min = 10 ;из 12

[dsh.gulag.override.pri_smart_controler_lair1]
; контроллеры в детском саду
dsh_walking = true
dsh_walking_keep_min = 1 ;из 2

[dsh.gulag.override.pri_smart_controler_lair2]
; контроллеры у автовокзала
dsh_walking = true
dsh_walking_keep_min = 1 ;из 2

[dsh.gulag.override.pri_smart_bloodsucker_lair1]
; кровососы в магазине по левой стороне, где Рабинович
dsh_walking = true

[dsh.gulag.override.pri_smart_snork_lair1]
; снорки по правой стороне
dsh_walking = true

[dsh.gulag.override.pri_smart_snork_lair2]
; снорки на площади
dsh_walking = true

[dsh.gulag.override.pri_smart_giant_lair1]
; псевдогиганты на стадионе
dsh_walking = true

