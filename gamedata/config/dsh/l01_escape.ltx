; -*- mode: conf-windows; coding: windows-1251-dos -*-

; Переопределить некоторые параметры гулагов.
[dsh.gulag.override.esc2_most]
; Сталкеры под дорогой, на Кордоне
communities = stalker, green, freedom
capacity    = 5 ;3
dsh_walking = true

[dsh.gulag.override.sak_esc_lager]
; костер у тепловоза, у насыпи.
communities = stalker, green
dsh_walking = true

[dsh.gulag.override.esc2_st_fox_place]
; Сталкеры в домике на Кордоне, где Лис был
communities = stalker, green
dsh_walking = true

[dsh.gulag.override.esc_farm_lager]
; Сталкеры на ферме, за мостом
dsh_walking = true

[dsh.gulag.override.esc2_smart_stalker_exit]
; Сталкеры на Кордоне, у перехода на Свалку
communities = stalker, green, freedom
dsh_walking = true

[dsh.gulag.override.esc2_bandit_les]
; костёр на Кордоне, где Шустрый с Юриком сидят, недалеко от насыпи.
capacity             = 4 ;3
dsh_walking          = true
dsh_walking_keep_min = 3

[dsh.gulag.override.esc_assault]
; три сталкера на холме, которые идут на АТП и там мрут у костра. Но в самом
; начале - это группа Петрухи, которая атакует АТП. Вот после освобождения
; Шустрого мы этот смарт и выключим. Таким же образом в all.spawn выключается
; смарт с первоначальными бандитами на АТП.
cond = {-esc_kill_bandits_quest_kill -esc_kill_bandits_quest_done}

;[dsh.gulag.override.esc2_bloodsucker1]
; оказывается, на Кордоне водится кровосос. И живет он как раз там, где
; стоит Крысюк. Этот смарт есть в all.spawn, но удаляется из диалога с
; с Прапором, когда он просит принести штык-нож.
;cond = never ;{+agroprom_military_case_done}
