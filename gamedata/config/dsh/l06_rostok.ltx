; -*- mode: conf-windows; coding: windows-1251-dos -*-

; Переопределить некоторые параметры гулагов.
[dsh.gulag.override.ros_smart_stalker2]
; Бандиты на ДТ, у вагонов
cond = never ;{+bar_rescue_research_done}, {+bar_rescue_research_fail}

; Сталкеры на ДТ, за стройкой
[dsh.gulag.override.ros_smart_stalker_bandits1]
capacity    = 4 ;8
communities = stalker, green, dolg ;stalker
dsh_after_delay = 24, 168 ;от суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = bad,60, good,40
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.ros_smart_stalker_bandits1.bad]:dsh.gulag.override.ros_smart_stalker_bandits1
communities = killer, bandit

[dsh.gulag.override.ros_smart_stalker_bandits1.good]:dsh.gulag.override.ros_smart_stalker_bandits1

; Два сталкера на ДТ, в центре у ёмкостей
[dsh.gulag.override.ros_smart_stalker3]
cond = never ;{+bar_rescue_research_done}, {+bar_rescue_research_fail}

[dsh.gulag.override.rost_naem_koster]
; Наёмники на ДТ, у костра, у перехода на Янтарь
dsh_walking = true

; наемники и бандиты, на которых дает задание Бармен
[dsh.gulag.override.ros_smart_killers1]
dsh_change_profile_on_empty = true
dsh_profiles = killer, bandit

; пусть будут либо наемники, либо бандиты, а не вперемешку.
[dsh.gulag.override.ros_smart_killers1.killer]:dsh.gulag.override.ros_smart_killers1
communities = killer
[dsh.gulag.override.ros_smart_killers1.bandit]:dsh.gulag.override.ros_smart_killers1
communities = bandit
