-- ремонтируем
function actor_repair(obj)
	local section = obj:section()
	if has_alife_info("biznes_remove_special_item") or string.sub(section,1,11) ~= "repair_item" then return end -- не наш "клиент"

	if section == "repair_item_weapon" then
		item:set_condition(cond+rep_percent)
--		news_manager.send_tip(db.actor, "Оружие отремонтировано.", level.get_game_difficulty()*3, nil, 10000)
	elseif section == "repair_item_outfit" then
		amk_mod.repair_armor(cond+rep_percent)
--		news_manager.send_tip(db.actor, "Броня отремонтирована.", level.get_game_difficulty()*3, nil, 10000)
	end
end

------------- Функции для диалога ---------------

-- главный прекондишн: может ли непись ремонтировать? 
function can_repair(first_speaker, second_speaker)
	-- Общие поршни
	if not has_alife_info("tutorial_end") then
		return false
	end
	
	-- Поршни по неписям. 
	-- Сяк на Радаре
	if second_speaker:profile_name() == "Sak" and not has_alife_info("sak_repair_box_done") then 
		return false
	end
	-- Долговязый
	if second_speaker:profile_name() == "dolgovazyi" and not has_alife_info("dolgovazyi_toolkit_done") then 
		return false
	end

	return true
end

-- есть ли предмет в слоте?
function is_item1()	return is_item(1) end
function is_item2()	return is_item(2) end
function is_item6()	return is_item(6) end
function is_item(slt)
	return db.actor:item_in_slot(slt)
end

-- слишком убитый предмет?
function too_bad_item1() return too_bad_item(1) end
function too_bad_item2() return too_bad_item(2) end
function too_bad_item6() return too_bad_item(6) end
function too_bad_item(slt)
	return db.actor:item_in_slot(slt):condition() < min_cond_item
end

-- полностью исправный предмет?
function ok1() return ok(1) end
function ok2() return ok(2) end
function ok6() return ok(6) end
function ok(slt)
	return db.actor:item_in_slot(slt):condition() > cond_ok
end

-- нужен ли ремонт?
function need1() return need(1) end
function need2() return need(2) end
function need6() return need(6) end
function need(slt)
	return not too_bad_item(slt) and not ok(slt)
end

-- что нужно для ремонта?
function talk_parts1() return talk_parts(1) end
function talk_parts2() return talk_parts(2) end
function talk_parts6() return talk_parts(6) end
function talk_parts(slt)
	slot = slt
	item = db.actor:item_in_slot(slot)
	cond = item:condition()
	count = 1
	local text = ""

	if slot == 6 then
		if cond > cond_double then
			text = "Для ремонта брони мне нужно "..parts_list().." и "..tostring(parts_money()).." рублей. Будем ремонтироваться?"
		else
			count = 2
			text = "Броня сильно потрепана, поэтому для ремонта мне нужно два артефакта "..parts_list().." и "..tostring(parts_money()).." рублей. Будем ремонтироваться?"
		end
	else
		if cond > cond_double then
			local parts_money = parts_money()
			text = "Для ремонта мне нужен любой ствол такого же калибра на запчасти, "..parts_list().." и "..tostring(parts_money).." рублей. Или " .. parts_list() .. " и " .. tostring( parts_money * repair_wo_wpn_koef ) .. " рублей, а остальное я достану сам. Будем ремонтироваться?"
		else
			count = 2
			local parts_money = parts_money()
			text = "Этот ствол изрядно потрепан. Поэтому мне нужно два любых ствола такого же калибра на запчасти, два артефакта "..parts_list().." и "..tostring(parts_money).." рублей. Или два артефакта " .. parts_list() .. " и "  .. tostring( parts_money * repair_wo_wpn_koef ) .. " рублей, а остальное я достану сам. Будем ремонтироваться?"
		end
	end

	local task_texture, task_rect = get_texture_info("ui_iconsTotal_lost_money")
	db.actor:give_talk_message(text, task_texture, task_rect, "simple_answer_item")
end

-- список предметов для ремонта
function parts_list()
	local text = ""
	
	if slot == 6 then
		parts = parts_armor
	else
		parts = parts_wpn
	end
	
	for i=1,#parts do
		text = text..game.translate_string(rx_utils.read_from_ini(nil, parts[i], "inv_name", "", 1))
		
		if i < #parts then
			text = text..", "
		end
	end
	
	return text
end

-- деньги на ремонт
function parts_money()
	pay = math.floor(item:cost()*(1-item:condition())*money_koef*count)
	return pay
end

-- все ли есть для ремонта?
function not_have_all() return not have_all() end
function have_all()
	-- деньги
	if db.actor:money() < pay then
		return false
	end
	
	-- предметы
	for i=1,#parts do
		if not new_dialog.item_much(parts[i], count) then
			return false
		end
	end

	-- стволы по калибру, проверка по патронам
	if slot ~= 6 then
		ammo = rx_utils.parse_list_new(nil, item:section(), "ammo_class")[1]
		have = 0
		db.actor:iterate_inventory(kalibr_count,db.actor)
		
		if have < count and db.actor:money() < ( pay * repair_wo_wpn_koef ) then
			return false
		end
	end

	return true
end
function kalibr_count(actor, itm)
	if  (not db.actor:item_in_slot(1) or itm:id() ~= db.actor:item_in_slot(1):id()) and 
		(not db.actor:item_in_slot(2) or itm:id() ~= db.actor:item_in_slot(2):id()) and
		itm:condition() and itm:condition() > min_cond_parts and
		kalibr_ok(itm)
	then
		have = have+1
	end
end

-- Ремонт предмета ремонтником. Все данные к этому моменту уже проверены и заполнены
function npc_repair(first_speaker, second_speaker)
	-- отбираем все, что нужно
	for i=1,#parts do
		sak.out_item_namber(parts[i], count)
	end

	-- отбираем стволы и ремонтируем
	local money = pay
	if slot ~= 6 then
	  if have < count then
	    money = pay * repair_wo_wpn_koef
	  else
	    have = 0
	    db.actor:iterate_inventory( kalibr_remove, db.actor )
	  end
	  item:set_condition( 1 )
	else
	  amk_mod.repair_armor( 1 )
	end
	dialogs.relocate_money(second_speaker, money, "out")
end
function kalibr_remove(actor, itm)
	if have < count and
		(not db.actor:item_in_slot(1) or itm:id() ~= db.actor:item_in_slot(1):id()) and 
		(not db.actor:item_in_slot(2) or itm:id() ~= db.actor:item_in_slot(2):id()) and
		itm:condition() and itm:condition() > min_cond_parts and
		kalibr_ok(itm)
	then
		news_manager.relocate_item(db.actor, "out", itm:section())
        amk.remove_item_from_inventory(itm, actor)
		have = have+1
	end
end

-- проверка калибра
function kalibr_ok(itm)
	local ammos = rx_utils.parse_list_new(nil, itm:section(), "ammo_class")
	
	for i=1,#ammos do
		if ammos[i] == ammo then
			return true
		end
	end
	
	return false
end

