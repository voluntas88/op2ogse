			count=count+1
		end
	end
	if count == 0 then return end
--[[	for iKey, aButton in pairs(aCmpnButtons) do
		if aButton.oSlot == nil or aButton.iSectIndex == nil then
			return
		end
	end]]
	--[[
	--	Попытаться трансмутировать артефакты.
	--]]
	CAmkTransmutacion()
end


