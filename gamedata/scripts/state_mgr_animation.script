function write_log(npc, str)
	if _sdata.GlobalEnable == true then
		local target_obj = level.get_target_obj()
		if target_obj and target_obj:id() == npc:id() then
			log1(str)
		end
	end
end

function write_log_3(npc, fmt, ...)
	if _sdata.GlobalEnable == true then
		local target_obj = level.get_target_obj()
		if target_obj and target_obj:id() == npc:id() then
			log3(fmt, ...)
		end
	end
end


